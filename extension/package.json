{
  "name": "mindmap-tool",
  "displayName": "Mindmap Tool",
  "description": "JSON/YAMLファイルからマインドマップを生成・編集するVSCode拡張",
  "version": "0.1.0",
  "publisher": "mindmap-tool",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "mindmap",
    "json",
    "yaml",
    "visualization",
    "diagram"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:yaml",
    "onCommand:mindmapTool.openMindmap",
    "onCommand:mindmapTool.createNewMindmap"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mindmapTool.openMindmap",
        "title": "マインドマップを開く",
        "category": "Mindmap Tool"
      },
      {
        "command": "mindmapTool.openPreview",
        "title": "マインドマッププレビューを開く",
        "category": "Mindmap Tool",
        "icon": "$(open-preview)"
      },
      {
        "command": "mindmapTool.openPreviewToSide",
        "title": "マインドマッププレビューを横に開く",
        "category": "Mindmap Tool",
        "icon": "$(preview)"
      },
      {
        "command": "mindmapTool.createNewMindmap",
        "title": "新しいマインドマップを作成",
        "category": "Mindmap Tool"
      },
      {
        "command": "mindmapTool.exportMindmap",
        "title": "マインドマップをエクスポート",
        "category": "Mindmap Tool"
      },
      {
        "command": "mindmapTool.validateSchema",
        "title": "スキーマを検証",
        "category": "Mindmap Tool"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mindmapTool.openPreview",
          "when": "resourceExtname == .json || resourceExtname == .yaml || resourceExtname == .yml",
          "group": "navigation",
          "alt": "mindmapTool.openPreviewToSide"
        }
      ],
      "explorer/context": [
        {
          "command": "mindmapTool.openMindmap",
          "when": "resourceExtname == .json || resourceExtname == .yaml || resourceExtname == .yml",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "mindmapTool.openMindmap",
          "when": "resourceExtname == .json || resourceExtname == .yaml || resourceExtname == .yml",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "mindmapTool.openMindmap",
          "when": "resourceExtname == .json || resourceExtname == .yaml || resourceExtname == .yml"
        },
        {
          "command": "mindmapTool.openPreview",
          "when": "resourceExtname == .json || resourceExtname == .yaml || resourceExtname == .yml"
        },
        {
          "command": "mindmapTool.openPreviewToSide",
          "when": "resourceExtname == .json || resourceExtname == .yaml || resourceExtname == .yml"
        }
      ]
    },
    "configuration": {
      "title": "Mindmap Tool",
      "properties": {
        "mindmapTool.editor.theme": {
          "type": "string",
          "enum": [
            "vs",
            "vs-dark",
            "hc-black"
          ],
          "default": "vs-dark",
          "description": "エディタのテーマ"
        },
        "mindmapTool.editor.fontSize": {
          "type": "number",
          "default": 14,
          "minimum": 8,
          "maximum": 40,
          "description": "エディタのフォントサイズ"
        },
        "mindmapTool.mindmap.layout": {
          "type": "string",
          "enum": [
            "tree",
            "radial"
          ],
          "default": "tree",
          "description": "マインドマップのレイアウト"
        },
        "mindmapTool.mindmap.theme": {
          "type": "string",
          "enum": [
            "light",
            "dark",
            "auto"
          ],
          "default": "auto",
          "description": "マインドマップのテーマ（autoはVSCodeテーマに従う）"
        },
        "mindmapTool.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "スキーマ検証を有効にする"
        },
        "mindmapTool.validation.showWarnings": {
          "type": "boolean",
          "default": true,
          "description": "警告を表示する"
        },
        "mindmapTool.autoSave.enabled": {
          "type": "boolean",
          "default": true,
          "description": "自動保存を有効にする"
        },
        "mindmapTool.autoSave.delay": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "自動保存の遅延時間（ミリ秒）"
        }
      }
    },
    "languages": [
      {
        "id": "mindmap-json",
        "aliases": [
          "Mindmap JSON"
        ],
        "extensions": [
          ".mindmap.json"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mindmap-yaml",
        "aliases": [
          "Mindmap YAML"
        ],
        "extensions": [
          ".mindmap.yaml",
          ".mindmap.yml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.mindmap.json",
        "url": "./schemas/mindmap-data.schema.json"
      }
    ],
    "yamlValidation": [
      {
        "fileMatch": "*.mindmap.yaml",
        "url": "./schemas/mindmap-data.schema.json"
      },
      {
        "fileMatch": "*.mindmap.yml",
        "url": "./schemas/mindmap-data.schema.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "mindmapTool.mindmapEditor",
        "displayName": "Mindmap Tool",
        "selector": [
          {
            "filenamePattern": "*.json"
          },
          {
            "filenamePattern": "*.yaml"
          },
          {
            "filenamePattern": "*.yml"
          },
          {
            "filenamePattern": "*.mindmap.json"
          },
          {
            "filenamePattern": "*.mindmap.yaml"
          },
          {
            "filenamePattern": "*.mindmap.yml"
          }
        ],
        "priority": "option"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build-webview": "vite build --config vite.config.vscode.ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "ajv": "^8.17.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mindmap-tool.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/mindmap-tool/issues"
  },
  "homepage": "https://github.com/your-username/mindmap-tool#readme",
  "license": "MIT"
}